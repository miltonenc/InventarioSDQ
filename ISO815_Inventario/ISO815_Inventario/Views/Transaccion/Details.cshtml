@model ISO815_Inventario.Models.transaccion

@{
    ViewBag.Title = "Transaccion/Detalle";
}

<h2>Transaccion</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.tipo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tipo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.articulo_id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.articulo.nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.cantidad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cantidad)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.monto)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.monto)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.fecha)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.estado)
        </dt>

        <dd>
            @if (Model.estado == 1)
            {
                @("Activo");
            }
            else
            {
                @("Inactivo");
            }
        </dd>

    </dl>
</div>

<div class="row">
    <div class="col-md-offset-2 col-md-4">
        @(Html.ActionLink("Volver al Listado", "Index", new { id = 1 }, new { @class = "btn btn-outline-dark" }))
    </div>
</div>

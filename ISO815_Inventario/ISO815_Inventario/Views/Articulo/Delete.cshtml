@model ISO815_Inventario.Models.articulo

@{
    ViewBag.Title = "Articulo/Eliminar";
}

<h2>Articulo</h2>

<h3>¿Esta seguro que quiere inactivar este registro?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descripcion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.precio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.precio)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.existencia)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.existencia)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.tipo_inventario_id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tipo_inventario.nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.almacen_id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.almacen.nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.estado)
        </dt>

        <dd>
            @if (Model.estado == 1)
            {
                @("Activo");
            }
            else
            {
                @("Inactivo");
            }
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-offset-2 col-md-1">
                <input type="submit" value="Eliminar" class="btn btn-danger" />
            </div>
            <div class="col-md-offset-2 col-md-1">
                <p>
                    @(Html.ActionLink("Cancelar", "Index", new { id = 1 }, new { @class = "btn btn-outline-dark" }))
                </p>
            </div>
        </div>
    }
</div>
